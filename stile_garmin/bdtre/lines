#CURVE DI LIVELLO

#Attribuisco a tutte le curve il tag minor_contour

CV_LIV_TY=direttrice { add look = minor_contour }
CV_LIV_TY='ordinaria, intermedia' { add look = minor_contour }


#Assegno la quota ad ogni curva facendo la conversione

look = minor_contour { name '${name|conv:m=>ft}' }


#Assegno il tipo di curva in base alla quota

look = minor_contour & ( name ~ '.*[05]0\.0+' )
 { set look = medium_contour }

look = medium_contour & ( name ~ '.*[05]00\.0+' )
 { set look = major_contour }


#ed infine il codice
look = major_contour     [ 0x22 resolution 20 ]
look = medium_contour    [ 0x21 resolution 21 ]
look = minor_contour     [ 0x20 resolution 22 ]

